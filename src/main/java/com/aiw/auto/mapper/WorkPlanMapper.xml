<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--命名空间应该是对应接口的包名+类名 -->
<mapper namespace="com.aiw.auto.mapper.WorkPlanMapper">
	
	<!--表名 -->
	<sql id="tableName">
		b_workplan
	</sql>
	
	
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.aiw.auto.entity.WorkPlan">
		insert into  <include refid="tableName"></include> 
		 (  
			`progress`
   				,
  
			`name`
   				
		 <include refid="com.aiw.mapper.Common.createEntityColumn"></include> ) 
		 values (
			#{progress}
   				,
			#{name}
   				
		 <include refid="com.aiw.mapper.Common.createEntityColumnValue"></include>) 
	</insert>
    
    
    <update id="update" parameterType="com.aiw.auto.entity.WorkPlan" >
	    update  <include refid="tableName"></include> 
	    <set > 
	       lastUpdateTime = current_timestamp(),
	       lastUpdateUser = 'admin'
	      <if test="progress != null" >
	        ,progress = #{progress}
	      </if>
	      <if test="name != null" >
	        ,name = #{name}
	      </if>
	    </set>
	    where id = #{id}
	  </update>
    
    <select id="selectPage" resultType="com.aiw.auto.entity.WorkPlan">
        select * from 
        <include refid="tableName"></include> 
         <where> 
         		<if test="t.progress != null">
			         progress = #{t.progress}
			    </if> 
         		<if test="t.name != null">
			         name = #{t.name}
			    </if> 
		  </where>
        order by id desc
    </select>
    
    
    <select id="select" resultType="com.aiw.auto.entity.WorkPlan">
        select * from 
        <include refid="tableName"></include>  
          <where> 
		    <if test="id != null">
		        id = #{id}
		    </if> 
		  </where>
    </select>
    
    <delete id="delete">
    	delete from <include refid="tableName"></include> 
    	where id = #{id}  
    </delete>
    
</mapper>