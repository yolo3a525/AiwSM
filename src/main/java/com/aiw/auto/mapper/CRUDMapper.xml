<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--命名空间应该是对应接口的包名+类名 -->
<mapper namespace="com.aiw.auto.mapper.CRUDMapper">
	
	<!--表名 -->
	<sql id="tableName">
		b_crud
	</sql>
	
	
    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.aiw.auto.entity.CRUD">
		insert into  <include refid="tableName"></include> 
		 (  
			`birthday`
   				,
  
			`email`
   				,
  
			`name`
   				,
  
			`age`
   				
		 <include refid="com.aiw.mapper.Common.createEntityColumn"></include> ) 
		 values (
			#{birthday}
   				,
			#{email}
   				,
			#{name}
   				,
			#{age}
   				
		 <include refid="com.aiw.mapper.Common.createEntityColumnValue"></include>) 
	</insert>
	
	
	<update id="update" parameterType="com.aiw.auto.entity.CRUD" >
	    update  <include refid="tableName"></include> 
	    <set > 
	       lastUpdateTime = current_timestamp(),
	       lastUpdateUser = #{lastUpdateUser}
	      <if test="birthday != null" >
	        ,birthday = #{birthday}
	      </if>
	      <if test="email != null" >
	        ,email = #{email}
	      </if>
	      <if test="name != null" >
	        ,name = #{name}
	      </if>
	        <if test="age != null" >
	        ,age = #{age}
	      </if>
	    </set>
	    where id = #{id}
	  </update>
    
    <select id="selectPage" resultType="com.aiw.auto.entity.CRUD">
        select * from 
        <include refid="tableName"></include> 
         <where> 
         		<if test="t.birthday != null">
			         birthday = #{t.birthday}
			    </if> 
         		<if test="t.email != null">
			         email = #{t.email}
			    </if> 
         		<if test="t.name != null">
			         name = #{t.name}
			    </if> 
         		<if test="t.age != null">
			         age = #{t.age}
			    </if> 
		  </where>
        order by id desc
    </select>
    
    <select id="select" resultType="com.aiw.auto.entity.CRUD">
        select * from 
        <include refid="tableName"></include>  
          <where> 
		    <if test="id != null">
		        id = #{id}
		    </if> 
		  </where>
    </select>
    
    <delete id="delete">
    	delete from <include refid="tableName"></include> 
    	where id = #{id}  
    </delete>
    
</mapper>